package app.graphicplace;

import javafx.scene.paint.Color;

public enum GraphicPlaceState {
	IS_DEFAULT(Color.LIGHTGRAY, 1.0),
    IS_START(Color.GREEN, 2.0),
    IS_END(Color.RED, 2.0),
    IS_DEFEAT(Color.BLACK, 2.0),
    DIJKSTRA_UNVISITED(Color.LIGHTBLUE, 1.0),
    DIJKSTRA_VISITED(Color.BLUE, 1.5),
    DIJKSTRA_CURRENT(Color.ORANGE, 2.5),
    DIJKSTRA_MODIFIED(Color.PURPLE, 2.0),
    DIJKSTRA_OVER(Color.DARKGREEN, 2.5);

    private final Color fill;
    private final double strokeWidth;

    GraphicPlaceState(Color fill, double strokeWidth) {
        this.fill = fill;
        this.strokeWidth = strokeWidth;
    }

    public Color getFill() {
        return fill;
    }

    public double getStrokeWidth() {
        return strokeWidth;
    }
}
